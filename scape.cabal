name:           scape
version:        1.0.0.0
synopsis:       Roguelike
category:       Web
build-type:     Simple
cabal-version:  >= 1.10

executable app
  build-depends:    base, miso
  if !impl(ghcjs)
    build-depends:
        jsaddle, jsaddle-warp, transformers, warp, websockets
  default-language: Haskell2010
  ghcjs-options:    -dedupe
  main-is:          Main.hs
  other-modules:    
    State